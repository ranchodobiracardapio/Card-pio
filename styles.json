{
  "version": 8,
  "name": "SuperHubz - Laranja Custom",
  "metadata": {
    "description": "Estilo 100% personalizado com acentos laranja, alto contraste e marcador GeoJSON de exemplo."
  },
  "center": [-46.633309, -23.55052],
  "zoom": 12,
  "sprite": "mapbox://sprites/mapbox/streets-v8",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "sources": {
    "mapbox-streets": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    },
    "custom-markers": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": {
              "title": "Ponto Exemplo",
              "description": "Marcador personalizado do SuperHubz",
              "marker-color": "#FF6A00",
              "marker-size": "large"
            },
            "geometry": {
              "type": "Point",
              "coordinates": [-46.633309, -23.55052]
            }
          }
        ]
      }
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#0f1720"
      }
    },

    {
      "id": "land",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "landuse",
      "filter": ["==", "class", "park"],
      "paint": {
        "fill-color": "#0f2a18",
        "fill-opacity": 0.9
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "water",
      "paint": {
        "fill-color": "#051923",
        "fill-opacity": 0.95
      }
    },

    {
      "id": "minor-roads",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "street", "service", "path"]],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#15202b",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 0.6, 15, 1.4]
      }
    },

    {
      "id": "major-roads",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "motorway", "trunk", "primary", "secondary"]],
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": "#FF6A00",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 1.2, 15, 6],
        "line-opacity": 0.95
      }
    },

    {
      "id": "road-highlight-outline",
      "type": "line",
      "source": "mapbox-streets",
      "source-layer": "road",
      "filter": ["all", ["==", "$type", "LineString"], ["in", "class", "motorway", "trunk", "primary", "secondary"]],
      "paint": {
        "line-color": "#8A3B00",
        "line-width": ["interpolate", ["linear"], ["zoom"], 5, 2.4, 15, 10],
        "line-opacity": 0.15
      }
    },

    {
      "id": "buildings-fill",
      "type": "fill",
      "source": "mapbox-streets",
      "source-layer": "building",
      "paint": {
        "fill-color": "#0b2026",
        "fill-outline-color": "#071318",
        "fill-opacity": ["interpolate", ["linear"], ["zoom"], 15, 0.0, 16, 1.0]
      }
    },

    {
      "id": "pois-symbols",
      "type": "symbol",
      "source": "mapbox-streets",
      "source-layer": "poi_label",
      "layout": {
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
        "text-size": ["interpolate", ["exponential", 1.2], ["zoom"], 10, 10, 15, 14],
        "text-anchor": "top"
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1
      }
    },

    {
      "id": "labels-street",
      "type": "symbol",
      "source": "mapbox-streets",
      "source-layer": "road",
      "layout": {
        "symbol-placement": "line",
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["Open Sans Semibold", "Arial Unicode MS Regular"],
        "text-size": 10
      },
      "paint": {
        "text-color": "#FFDAB3",
        "text-halo-color": "#0b1c24",
        "text-halo-width": 1
      }
    },

    {
      "id": "custom-marker-layer",
      "type": "symbol",
      "source": "custom-markers",
      "layout": {
        "icon-allow-overlap": true,
        "icon-size": 1,
        "text-field": ["get", "title"],
        "text-font": ["Open Sans Bold", "Arial Unicode MS Bold"],
        "text-offset": [0, 1.2],
        "text-anchor": "top"
      },
      "paint": {
        "text-color": "#FFB88C"
      }
    },

    {
      "id": "custom-marker-circle",
      "type": "circle",
      "source": "custom-markers",
      "paint": {
        "circle-radius": ["interpolate", ["linear"], ["zoom"], 10, 8, 16, 16],
        "circle-color": "#FF6A00",
        "circle-stroke-width": 2,
        "circle-stroke-color": "#ffffff",
        "circle-opacity": 0.95
      }
    },

    {
      "id": "focus-glow",
      "type": "line",
      "source": "custom-markers",
      "filter": ["!=", "$type", "Polygon"],
      "paint": {
        "line-color": "#FF9A4D",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 0, 16, 6],
        "line-opacity": 0.25
      }
    }
  ]
}
